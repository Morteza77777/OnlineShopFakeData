<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_app"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_2"
        >

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/back_view_product_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:id="@+id/view12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/back_edt_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_product"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/view12"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:text="srgtsegsdg" />

        <View
            android:id="@+id/view_explanation"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_view_product_explanation"
            app:layout_constraintEnd_toEndOf="@+id/txt_product"
            app:layout_constraintTop_toBottomOf="@+id/txt_product" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explanation"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_explanation"
            app:layout_constraintEnd_toEndOf="@+id/view_explanation"
            app:layout_constraintStart_toStartOf="@+id/view_explanation"
            app:layout_constraintTop_toTopOf="@+id/view_explanation" />

        <View
            android:id="@+id/view_property"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_view_product_explanation"
            app:layout_constraintEnd_toStartOf="@+id/view_explanation"
            app:layout_constraintTop_toTopOf="@+id/view_explanation" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/property"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/view_property"
            app:layout_constraintEnd_toEndOf="@+id/view_property"
            app:layout_constraintStart_toStartOf="@+id/view_property"
            app:layout_constraintTop_toTopOf="@+id/view_property" />

        <View
            android:id="@+id/view_comments"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_view_product_explanation"
            app:layout_constraintEnd_toStartOf="@+id/view_property"
            app:layout_constraintTop_toTopOf="@+id/view_property" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comments"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_comments"
            app:layout_constraintEnd_toEndOf="@+id/view_comments"
            app:layout_constraintStart_toStartOf="@+id/view_comments"
            app:layout_constraintTop_toTopOf="@+id/view_comments" />

        <View
            android:id="@+id/view_familiar"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_view_product_explanation"
            app:layout_constraintEnd_toStartOf="@+id/view_comments"
            app:layout_constraintTop_toTopOf="@+id/view_property" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/familiar"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/view_familiar"
            app:layout_constraintEnd_toEndOf="@+id/view_familiar"
            app:layout_constraintStart_toStartOf="@+id/view_familiar"
            app:layout_constraintTop_toTopOf="@+id/view_familiar" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/explanation"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/view_explanation"
            app:layout_constraintTop_toBottomOf="@+id/view_explanation" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>